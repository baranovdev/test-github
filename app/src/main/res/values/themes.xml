<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.TestGithub" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary_color</item>

        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary_color</item>

    </style>

    <style name="Theme.TestGithub" parent="Base.Theme.TestGithub" />

    <style name="DefaultText_Semibold">
        <item name="android:fontFamily">@font/golos_semibold</item>
    </style>
    <style name="DefaultText_Bold">
        <item name="android:fontFamily">@font/golos_bold</item>
    </style>
    <style name="DefaultText_Regular">
        <item name="android:fontFamily">@font/golos_regular</item>
    </style>

    <style name="TestGithubInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundMode">filled</item>
        <item name="backgroundColor">@color/primary_variant</item>
        <item name="shapeAppearance">@style/RoundedTextInput</item>
    </style>


    <style name="RoundedTextInput" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="backgroundTint">@color/primary_variant</item>
    </style>
</resources>